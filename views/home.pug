    script(type='text/javascript' src='../d3/map.js')
    script(type='text/javascript' src="../piechart.js")
    script(type='text/javascript' src="../lineChart.js")
    script(type='text/javascript' src="../barChart.js")
    script(type='text/javascript' src="../compareStates.js") 
      